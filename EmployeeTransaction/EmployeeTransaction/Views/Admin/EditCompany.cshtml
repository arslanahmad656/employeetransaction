@model EmployeeTransaction.Models.Company

@{
    ViewBag.Title = "Edit Company";
}

<h2>Edit Company</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Last Update</th>
                <th>Name</th>
                <th>To Whom</th>
                <th>Financial</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.LastStatusUpdate, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.ToWhom, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Financial, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                @for (var i = 0; i < 5; ++i)
                {
                    <td class="text-center">
                        @((string)ViewBag.Role)
                    </td>
                }
            </tr>
        </tfoot>
    </table>

    <div class="text-danger">
        <p>
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.ValidationMessageFor(model => model.LastStatusUpdate, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.ValidationMessageFor(model => model.ToWhom, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.ValidationMessageFor(model => model.Financial, "", new { @class = "text-danger" })
        </p>
    </div>
    <input type="submit" value="Save" class="btn btn-default" />

}
<br />
<div>
    @Html.ActionLink("Manage Employees", "EmployeeList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
