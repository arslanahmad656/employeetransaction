@model EmployeeTransaction.Models.Company

@{
    ViewBag.Title = "EditCompany";
}

<h2>Edit Company</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Date 1</th>
                <th>Date 2</th>
                <th>Financial</th>
                <th>Name</th>
                <th>Proposal</th>
                <th>State</th>
                <th>Status</th>
                <th>To Whom</th>
                <th>Words</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Date1, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Date2, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Financial, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Proposal, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.ToWhom, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.EditorFor(model => model.Words, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                @for (var i = 0; i < 10; ++i)
                {
                    <td class="text-center">
                        @((string)ViewBag.Role)
                    </td>
                }
            </tr>
        </tfoot>
    </table>

    <input type="submit" value="Save" class="btn btn-default" />

}


<div>
    @Html.ActionLink("View transactions assigned to you", "TransactionList") | @Html.ActionLink("View Files", "FileList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
