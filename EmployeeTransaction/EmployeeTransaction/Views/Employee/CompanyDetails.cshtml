@model EmployeeTransaction.Models.Company

@{
    ViewBag.Title = "CompanyDetails";
}

<h2>Company Details</h2>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Last Update</th>
            <th>Name</th>
            <th>To Whom</th>
            <th>Financial</th>
        </tr>
    </thead>
    <tbody>
        <tr class="text-center">
            <td>
                @Html.DisplayFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.LastStatusUpdate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.ToWhom, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Financial, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            @for (var i = 0; i < 5; ++i)
            {
                <td class="text-center">
                    @((string)ViewBag.Role)
                </td>
            }
        </tr>
    </tfoot>
</table>


<div>
    @Html.ActionLink("View transactions assigned to you", "TransactionList") | @Html.ActionLink("View Files", "FileList")
</div>
