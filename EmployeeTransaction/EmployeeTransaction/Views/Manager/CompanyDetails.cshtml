@model EmployeeTransaction.Models.Company

@{
    ViewBag.Title = "Edit Company";
}

<h2>Edit Company</h2>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Date 1</th>
            <th>Date 2</th>
            <th>Financial</th>
            <th>Name</th>
            <th>Proposal</th>
            <th>State</th>
            <th>Status</th>
            <th>To Whom</th>
            <th>Words</th>
        </tr>
    </thead>
    <tbody>
        <tr class="text-center">
            <td>
                @Html.DisplayFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Date1, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Date2, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Financial, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Proposal, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.ToWhom, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(model => model.Words, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            @for (var i = 0; i < 10; ++i)
            {
                <td class="text-center">
                    @((string)ViewBag.Role)
                </td>
            }
        </tr>
    </tfoot>
</table>


<br />
<div>
    @Html.ActionLink("Manage Employees", "EmployeeList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
